<Window x:Class="WebDavTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebDavTools"
        mc:Ignorable="d"
        Title="WebDAV Tools" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            
            <ComboBox x:Name="cbConnection" SelectedIndex="0" DisplayMemberPath="Name">
            </ComboBox>

            <TextBlock Grid.Column="1" Text="{Binding ElementName=cbConnection, Path=SelectedItem.Server}" />
            <TextBlock Grid.Column="2" Text="{Binding ElementName=cbConnection, Path=SelectedItem.AbsolutePath}" />
            <TextBox x:Name="tbPath" Grid.Column="3" Text="" />
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Click="btnOptions_Click">Options</Button>
            <Button Click="btnTest_Click">Properties</Button>
        </StackPanel>

        <ProgressBar x:Name="pbProgress" Grid.Row="2" Margin="2" Height="3" IsIndeterminate="True" />

        <TextBox x:Name="tbLog" Grid.Row="3" AcceptsReturn="True" FontFamily="Consolas" FontSize="11pt" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            
        </TextBox>
        
    </Grid>
</Window>
